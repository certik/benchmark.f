{
    "scripts": {
        "reload": "browser-sync start --server html/ --port 8080 --files='html/*'",
        "watch": "start /min npm-watch build & start /min npm run reload",
        "build": "doxygen .\\Doxyfile.in"
    },
    "watch": {
        "build": {
            "patterns": [
                "./articles/*",
                "./config/*",
                "./snippets/*",
                "../src/*"
            ],
            "extensions": "md,f90,css,xml",
            "quiet": false,
            "ignore": "html/*",
            "delay": 100
        }
    },
    "devDependencies": {
        "browser-sync": "^2.26.2",
        "npm-watch": "^0.11.0"
    },
    "dependencies": {
        "mathjax": "^2.7.9"
    }
}
