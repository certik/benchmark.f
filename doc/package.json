{
    "scripts": {
        "reload": "browser-sync start --server html/ --port 8080 --files='html/*'",
        "watch": "start /min npm-watch build & start /min npm run reload",
        "build": "doxygen .\\Doxyfile.in",
        "layout": "doxygen -l"
    },
    "watch": {
        "build": {
            "patterns": [
                "./articles/*",
                "../src/*"
            ],
            "extensions": "md,f90",
            "quiet": false,
            "ignore": "html/*",
            "delay": 500
        }
    },
    "devDependencies": {
        "browser-sync": "^2.27.11",
        "nodemon": "^3.1.4",
        "npm-watch": "^0.11.0"
    }
}
